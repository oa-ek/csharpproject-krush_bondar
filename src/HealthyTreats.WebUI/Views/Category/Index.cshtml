@model List<HealthyTreats.Core.Entities.Category>
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="/Category/Create" class="btn btn-primary float-end">Add a category</a>


<h2 class="mt-3 mb-3">@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.TitleCategory</td>
                <td>
                    <a href="/Category/Edit/@category.Id" class="btn btn-outline-primary">Edit</a>
                    <a href="/Category/Delete/@category.Id" class="btn btn-outline-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

