@model List<HealthyTreats.Core.Entities.Ingredient>
@{
    ViewData["Title"] = "Ingredients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="/Ingredients/Create" class="btn btn-primary float-end">Додати інгредієнт</a>

<h2 class="mt-3 mb-3">@ViewData["Title"]</h2>


        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Назва</th>
                    <th>Кількість</th>
                    <th>Одиниця виміру</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ingredient in Model)
                {
                    <tr>
                        <td>@ingredient.Title</td>
                        <td>@ingredient.Quantity</td>
                        <td>@ingredient.Unit</td>
                        <td>

                    <a href="/Ingredients/Edit/@ingredient.Id" class="btn btn-outline-primary">Редагувати</a>
                    <a href="/Ingredients/Delete/@ingredient.Id" class="btn btn-outline-primary">Видалити</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
