@{
    ViewData["Title"] = "Healthy Treats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css">

<a href="/Recipes/Create" class="btn btn-primary float-end">Add a recipe</a>

<h2>Recipes <i class="bi bi-cake2"></i></h2>

<br />

<div class="row">
    @if (Model != null)
    {
        @foreach (var p in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@p.ImagePath" alt="Зображення страви">
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text">@p.Description</p>
                        <div class="btn-group" role="group">
                            <a href="/Recipes/Details/@p.Id" class="btn btn-outline-primary"> Details </a>
                            <a href="/Recipes/Edit/@p.Id" class="btn btn-outline-primary">Edit</a>
                            <a href="/Recipes/Delete/@p.Id" class="btn btn-outline-primary">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>Немає даних для відображення</p>
    }
</div>
