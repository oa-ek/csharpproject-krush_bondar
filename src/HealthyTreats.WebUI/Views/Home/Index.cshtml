@{
    ViewData["Title"] = "Home Page";
}
<script src="https://kit.fontawesome.com/4335c0bc9b.js" crossorigin="anonymous"></script>
<div class="text-center">
   
    
</div>

<div class="container">
    <h2>Healthy Treats </h2>
    <br />

    <div class="row">
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var recipe in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@recipe.ImagePath" class="card-img-top" alt="Recipe Image">
                        <div class="card-body">
                            <h5 class="card-title">@recipe.Name</h5>
                            <p class="card-text">@recipe.Description</p>
                            <a href="/Home/Details/@recipe.Id" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No recipes available.</p>
        }
    </div>
</div>
